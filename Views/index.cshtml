<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Shoe Store</title>
  </head>
<body>
    <h1>Shoe Store</h1>

    <form action = "/createStore" method = "post">
      <input name = "storeName"></input>
      <button>Create Store</button>
    </form>

    <p>/////////Store List //////////////////////////////</p>


@if(@Model["stores"].Count > 0)
{
  @foreach(var store in @Model["stores"])
  {
    <li>@store.GetStore_name()</li>

    <form action ='/editStore/@store.GetId()' method = "post">
    <input type="hidden" name="_method" value="PATCH">
    <input name = "editStoreName"></input>
    <button>Update Name</button>
    </form>

    <form action = "/delete/@store.GetId()" method = "post">
    <input type="hidden" name="_method" value="DELETE">
    <button>Delete Store</button>
    </form>
    <p> //////////////////////////////</p>
  }
}
</body>
</html>
